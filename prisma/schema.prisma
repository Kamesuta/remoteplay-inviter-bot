generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model UserData {
  id Int @id @default(autoincrement())

  userId        String  @unique // User ID
  name          String // User name
  locale        String  @default("en") // User locale
  daemonId      String  @unique // Daemon ID
  daemonVersion String? // Version of the last connected daemon (for statistics)
}
